function edit_chat() {
  if (document.getElementById('chat_edit') == null) {
    document.getElementsByClassName("chat_redirect")[0].outerHTML = document.getElementsByClassName("chat_redirect")[0].outerHTML + '<span id="chat_edit" class="chat_redirect chat_reopen active" onClick="document.getElementById(' + "'priority-select'" + ').value = 4; UpdateCaseParams();"><a class="modal-trigger">Крит чат</a></span>'
	}
	if (document.getElementById('chat_edit') !== null) {
		document.getElementById('chat_edit').setAttribute('style','display: inline;')
		document.getElementById('chat_edit').className = "chat_redirect chat_reopen active"
	}
}

setInterval(edit_chat, 1000);
